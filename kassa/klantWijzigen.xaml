<UserControl x:Class="kassa.klantWijzigen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kassa"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="379" Height="286">
    <Grid Width="379" Height="286">
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <StackPanel HorizontalAlignment="Left" Height="286" VerticalAlignment="Top" Width="379">
            <Label Content="Telefoon"/>
            <TextBox x:Name="txtTelefoon" Height="23" TextWrapping="Wrap"/>
            <Label Content="Voornaam"/>
            <TextBox x:Name="txtVoornaam" Height="23" TextWrapping="Wrap"/>
            <Label Content="Achternaam"/>
            <TextBox x:Name="txtAchternaam" Height="23" TextWrapping="Wrap"/>
            <Label Content="Stad"/>
            <TextBox x:Name="txtStad" Height="23" TextWrapping="Wrap"/>
            <Button x:Name="btnOpslaan" Content="Button"/>
        </StackPanel>

    </Grid>
</UserControl>
